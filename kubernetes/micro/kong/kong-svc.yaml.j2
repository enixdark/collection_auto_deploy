apiVersion: v1
kind: Service
metadata:
  name: {{kong['name']}}
  namespace: {{namespace}}
spec:
  type: NodePort
  ports:
    - name: proxy
      port: {{kong['default_api_port']}}
    - name: proxy-ssl
      port: {{kong['default_ssl_api_port']}}
    - name: admin-api
      port: {{kong['admin_api_port']}}
  externalIPs:
    - {{kong['host']}}
  selector:
    app: {{kong['name']}}

